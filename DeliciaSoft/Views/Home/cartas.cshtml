            <div class="card">
                <span class="etiqueta">DESTACADOS</span>
                <div class="imagen"></div>
                <div class="info">
                    <h3>OBLEA</h3>
                    <p class="precio">$3,000</p>
                </div>
            </div>
            <div class="card">
                <span class="etiqueta">DESTACADOS</span>
                <div class="imagen"></div>
                <div class="info">
                    <h3>OBLEA</h3>
                    <p class="precio">$4,500</p>
                </div>
            </div>
            <div class="card">
                <span class="etiqueta">DESTACADOS</span>
                <div class="imagen"></div>
                <div class="info">
                    <h3>OBLEA</h3>
                    <p class="precio">$4,500</p>
                </div>
            </div>
            <div class="card">
                <span class="etiqueta">DESTACADOS</span>
                <div class="imagen"></div>
                <div class="info">
                    <h3>OBLEA</h3>
                    <p class="precio">$4,500</p>
                </div>
            </div>
        </div>
    </section>



    <section class="promociones">
        <h2>PROMOCIONES</h2>
        <div class="promociones-container">
            <div class="promo-card">
                <div class="promo-img">
                    <img src="~/images/Fresas.jpeg" alt="Promo 1">
                </div>
                <div class="promo-info">
                    <h3>Combo Fresitas</h3>
                    <p>Fresas con crema + Cupcake</p>
                    <span class="promo-precio">$10,000</span>
                </div>
            </div>

            <div class="promo-card">
                <div class="promo-img">
                    <img src="~/images/postre.jpeg" alt="Promo 2">
                </div>
                <div class="promo-info">
                    <h3>Oblea De la casa</h3>
                    <p>Oblea grande + topping extra y doble queso</p>
