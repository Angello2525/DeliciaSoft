<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DeliciaSoft</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/menu.css" />
</head>
<body>
    <header>
        <nav class="menu-principal">
            <div class="left-menu">
                <a href="@Url.Action("Index", "Home")" class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">INICIO</a>
                <a href="@Url.Action("Cartas", "Home")" class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Cartas" ? "active" : "")">CARTAS</a>
                <a href="@Url.Action("Pedidos", "Home")" class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Pedidos" ? "active" : "")">PEDIDOS</a>
                <a href="@Url.Action("Sedes", "Home")" class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Sedes" ? "active" : "")">SEDES</a>
            </div>

            <div class="logo">
                <img src="~/images/logo.png" alt="Delicias Darsy" />
            </div>

            <div class="right-menu">
                <a href="@Url.Action("Conocenos", "Home")" class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Conocenos" ? "active" : "")">CONOCENOS</a>
                <a href="@Url.Action("Contactenos", "Home")" class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Contactenos" ? "active" : "")">CONTACTENOS</a>
                <a href="@Url.Action("Login", "Account")" class="iniciar-sesion">INICIAR SESIÓN</a>
            </div>

            <div class="menu-toggle" id="menuToggle">☰</div>

            <div class="mobile-menu" id="mobileMenu">
                <a href="@Url.Action("Index", "Home")" class="mobile-menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active-mobile" : "")">INICIO</a>
                <a href="@Url.Action("Cartas", "Home")" class="mobile-menu-item">CARTAS</a>
                <a href="@Url.Action("Pedidos", "Home")" class="mobile-menu-item">PEDIDOS</a>
                <a href="@Url.Action("Sedes", "Home")" class="mobile-menu-item">SEDES</a>
                <a href="@Url.Action("Conocenos", "Home")" class="mobile-menu-item">CONOCENOS</a>
                <a href="@Url.Action("Contactenos", "Home")" class="mobile-menu-item">CONTACTENOS</a>
                <a href="@Url.Action("Login", "Account")" class="mobile-menu-item">INICIAR SESIÓN</a>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        
    </footer>

    <script src="~/js/site.js"></script>
    <script src="~/js/menu.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
